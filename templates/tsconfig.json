{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@actions/*": ["./app/actions/*"],
      "@titan/*": ["./titan/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.js",
    "titan/**/*.ts",
    "titan/**/*.js",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "server",
    ".titan"
  ]
}